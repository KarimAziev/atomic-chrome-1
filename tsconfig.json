{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "types": [
      "chrome",
      "ace",
      "monaco-editor",
      "codemirror",
      "node",
      "events",
      "uuid",
      "jest",
      "ckeditor4"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "dummy-codemirror": ["src/shims/codemirror.js"]
    }
  },
  "include": ["src", "__tests__"]
}
